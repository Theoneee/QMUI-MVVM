<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/errorStateRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/app_skin_status_layout_bg_color">

    <LinearLayout
        android:id="@+id/errorViewRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/stateImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/status_loading_view_loading_fail"
            tools:background="#000000"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/stateContentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textSize="?attr/app_skin_status_layout_content_size"
            android:textColor="?attr/app_skin_status_layout_content_color"
            android:gravity="center"
            android:lineSpacingExtra="5.5dp" />

    </LinearLayout>

</RelativeLayout>